{
  "name": "@chartwarden/api",
  "version": "1.0.0",
  "description": "Chartwarden API - HIPAA-compliant Hospice EHR Backend",
  "main": "server.js",
  "type": "module",
  "bin": {
    "charts": "./src/console/cli.js"
  },
  "scripts": {
    "start": "node start.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "sync": "node src/database/sync.js",
    "seed": "node src/database/seed.js",
    "seed:select": "node scripts/seed-integumentary.js",
    "seed:nutrition": "node scripts/seed-nutrition.js",
    "seed:hematological": "node scripts/seed-hematological.js",
    "seed:endocrine": "node scripts/seed-endocrine.js",
    "seed:cardiac": "node scripts/seed-cardiac.js",
    "seed:prognosis": "node scripts/seed-prognosis.js",
    "migrate:audit-logs": "node scripts/migrate-audit-logs-user-id.js",
    "cli": "node src/console/cli.js",
    "migrate": "drizzle-kit generate:pg",
    "migrate:up": "drizzle-kit up:pg",
    "migrate:down": "drizzle-kit down:pg",
    "migrate:run": "node src/database/migrate.drizzle.js",
    "migrate:auto": "node scripts/database/migrate.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config=jest.integration.config.cjs",
    "test:integration:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config=jest.integration.config.cjs --watch",
    "test:integration:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config=jest.integration.config.cjs --coverage",
    "test:integration:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --config=jest.integration.config.cjs --ci --coverage --reporters=default --reporters=jest-junit",
    "test:auth": "node test-all-endpoints.js",
    "test:cookie-auth": "node test-cookie-auth.js",
    "test:drizzle": "node scripts/database/test.drizzle.js",
    "test:auth-drizzle": "node scripts/database/test.better-auth.drizzle.js",
    "test:schemas": "node scripts/database/test_schemas.drizzle.js",
    "fix:model-has-roles": "node scripts/database/fix-model-has-roles.js",
    "fix:comprehensive": "node scripts/database/comprehensive-fix.js",
    "fix:corrected": "node scripts/database/corrected-fix.js",
    "fix:render": "node scripts/database/render-fix.js",
    "fix:render-deploy": "node scripts/database/render-deploy-fix.js",
    "fix:robust-render": "node scripts/database/robust-render-fix.js",
    "env:check": "node scripts/database/env-check.js",
    "db:test:render": "node scripts/database/render-db-test.js"
  },
  "keywords": [
    "fastify",
    "nodejs",
    "healthcare",
    "api"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/mongoose": "^8.0.3",
    "@faker-js/faker": "^9.9.0",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^10.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/static": "^7.0.1",
    "@fastify/websocket": "^8.3.0",
    "@node-rs/argon2": "^2.0.2",
    "argon2": "^0.44.0",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.4.9",
    "better-sqlite3": "^12.4.1",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.7",
    "exceljs": "^4.4.0",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.35.0",
    "nanoid": "^5.1.6",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "passport": "^0.6.0",
    "pdfmake": "^0.2.20",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "puppeteer": "^24.25.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "yup": "^1.4.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1"
  }
}
