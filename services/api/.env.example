# ===========================================
# Job Scheduler
# ===========================================
ENABLE_SCHEDULER=false
TZ=America/New_York

# ===========================================
# Encryption Configuration (HIPAA Compliance)
# ===========================================
# IMPORTANT: Generate secure keys for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Master encryption key for PHI data at rest (REQUIRED in production)
# Minimum 32 characters, 64-character hex recommended
ENCRYPTION_MASTER_KEY=your-64-character-hex-encryption-key-here

# Salt for key derivation (REQUIRED in production)
# Use a unique random string for each deployment
ENCRYPTION_KEY_SALT=your-unique-key-derivation-salt

# Key version for rotation tracking (increment when rotating keys)
ENCRYPTION_KEY_VERSION=1

# Previous encryption key (for key rotation - decrypt old data)
# ENCRYPTION_PREVIOUS_KEY=your-previous-key-if-rotating

# ===========================================
# Database SSL/TLS Configuration
# ===========================================
# Enable SSL for database connections (required in production)
DB_SSL=true

# Verify server certificate (set to false only for self-signed certs)
# DB_SSL_REJECT_UNAUTHORIZED=true

# Path to CA certificate (for custom CA or self-signed certs)
# DB_SSL_CA=/path/to/ca-certificate.pem

# Client certificates for mTLS (mutual TLS)
# DB_SSL_CERT=/path/to/client-certificate.pem
# DB_SSL_KEY=/path/to/client-key.pem

# ===========================================
# Redis TLS Configuration
# ===========================================
# TLS is enabled by default in production
# Set to false to explicitly disable (not recommended)
# REDIS_TLS=true

# Verify Redis server certificate
# REDIS_TLS_REJECT_UNAUTHORIZED=true

# Path to Redis CA certificate
# REDIS_TLS_CA=/path/to/redis-ca.pem

# Redis client certificates for mTLS
# REDIS_TLS_CERT=/path/to/redis-client-cert.pem
# REDIS_TLS_KEY=/path/to/redis-client-key.pem

# ===========================================
# HTTPS/TLS Server Configuration
# ===========================================
# Enable HTTPS by providing certificate paths
# If not set, assumes TLS termination at reverse proxy (nginx, Render, etc.)

# Path to TLS certificate
# TLS_CERT_PATH=/path/to/server-certificate.pem

# Path to TLS private key
# TLS_KEY_PATH=/path/to/server-private-key.pem

# Path to certificate chain (intermediate certs)
# TLS_CHAIN_PATH=/path/to/certificate-chain.pem

# Path to CA certificate for client verification (mTLS)
# TLS_CA_PATH=/path/to/ca-certificate.pem

# Passphrase for encrypted private key
# TLS_KEY_PASSPHRASE=your-key-passphrase

# Enable HTTP to HTTPS redirect
# TLS_REDIRECT_HTTP=true
# TLS_REDIRECT_PORT=80