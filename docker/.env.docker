# =============================================================================
# Docker Environment Configuration for Hospice EHR Backend
# =============================================================================
# Copy this file to .env when using Docker Compose
# Update the values according to your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Hospice EHR API
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8000
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=hospice_ehr
DB_USERNAME=hospice_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# -----------------------------------------------------------------------------
# Cache & Session
# -----------------------------------------------------------------------------
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate strong random secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
ADMIN_CREATION_SECRET=CHANGE_THIS_ADMIN_SECRET_KEY_FOR_PRODUCTION_USE

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@hospice-ehr.local
MAIL_FROM_NAME=Hospice EHR

# -----------------------------------------------------------------------------
# API Port
# -----------------------------------------------------------------------------
API_PORT=8000

# -----------------------------------------------------------------------------
# Database Management Tools (Optional)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@hospice-ehr.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

REDIS_COMMANDER_PORT=8081

# -----------------------------------------------------------------------------
# AWS Configuration (if using S3 for file storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# File System
# -----------------------------------------------------------------------------
FILESYSTEM_DRIVER=local

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null

# -----------------------------------------------------------------------------
# Broadcasting
# -----------------------------------------------------------------------------
BROADCAST_DRIVER=log

# -----------------------------------------------------------------------------
# Production Notes
# -----------------------------------------------------------------------------
# 1. ALWAYS change all passwords and secrets before deploying to production
# 2. Use strong, randomly generated passwords (minimum 16 characters)
# 3. Never commit this file with real credentials to version control
# 4. Consider using Docker secrets or a vault for sensitive data
# 5. Enable SSL/TLS in production environments
# 6. Restrict CORS_ORIGIN to your actual frontend domain(s)
# 7. Set APP_DEBUG=false in production
# 8. Use a proper SMTP server for production emails (not mailhog)
