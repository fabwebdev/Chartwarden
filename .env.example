# =============================================================================
# Chartwarden Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# For Docker: These values are used by docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=Chartwarden
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Backend API (services/api)
# -----------------------------------------------------------------------------
API_PORT=3001
API_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Frontend Web (apps/web)
# -----------------------------------------------------------------------------
WEB_PORT=3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Chartwarden

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5433
DB_NAME=chartwarden
DB_USER=chartwarden
DB_PASSWORD=chartwarden_dev_password
DATABASE_URL=postgresql://chartwarden:chartwarden_dev_password@localhost:5433/chartwarden

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=hospice_ehr:
REDIS_TLS=false
# REDIS_QUEUE_DB=1 # Separate DB for queue operations

# Cache Configuration
CACHE_DRIVER=redis
CACHE_TTL=3600
CACHE_PREFIX=hospice_ehr_

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# -----------------------------------------------------------------------------
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 32
BETTER_AUTH_SECRET=dev-secret-change-in-production-min-32-chars!!
BETTER_AUTH_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars!!
JWT_EXPIRES_IN=24h

# -----------------------------------------------------------------------------
# Admin Setup
# -----------------------------------------------------------------------------
ADMIN_CREATION_SECRET=dev-admin-secret-change-this

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Database Management Tools (Docker)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@chartwarden.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081

# -----------------------------------------------------------------------------
# OAuth Providers (Optional)
# -----------------------------------------------------------------------------
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_FROM_ADDRESS=noreply@chartwarden.com
# MAIL_FROM_NAME=Chartwarden

# -----------------------------------------------------------------------------
# Production Notes
# -----------------------------------------------------------------------------
# 1. ALWAYS change all passwords and secrets before deploying to production
# 2. Use strong, randomly generated passwords (minimum 32 characters)
# 3. Never commit this file with real credentials to version control
# 4. Consider using Docker secrets or a vault for sensitive data
# 5. Enable SSL/TLS in production environments
# 6. Restrict CORS_ORIGIN to your actual frontend domain(s)
# 7. Set NODE_ENV=production in production
# 8. Set LOG_LEVEL=info or warn in production
