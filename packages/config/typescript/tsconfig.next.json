{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Chartwarden Next.js TypeScript Configuration",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "allowJs": true,
    "types": ["node", "react", "react-dom"]
  }
}
