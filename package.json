{
  "name": "chartwarden",
  "version": "1.0.0",
  "private": true,
  "description": "Chartwarden - HIPAA-compliant Hospice EHR System",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "npm run dev -w @chartwarden/web",
    "dev:api": "npm run dev -w @chartwarden/api",
    "build": "turbo run build",
    "build:web": "npm run build -w @chartwarden/web",
    "build:api": "npm run build -w @chartwarden/api",
    "test": "turbo run test",
    "test:web": "npm run test -w @chartwarden/web",
    "test:api": "npm run test -w @chartwarden/api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "db:migrate": "npm run migrate:run -w @chartwarden/api",
    "db:generate": "npm run migrate:generate -w @chartwarden/api",
    "db:studio": "npm run db:studio -w @chartwarden/api",
    "clean": "rm -rf node_modules apps/*/node_modules services/*/node_modules packages/*/node_modules .turbo",
    "clean:turbo": "rm -rf .turbo apps/*/.turbo services/*/.turbo packages/*/.turbo",
    "docker:up": "docker-compose up -d postgres redis",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:full": "docker-compose --profile full up -d",
    "docker:full:build": "docker-compose --profile full up -d --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:tools": "docker-compose --profile tools up -d",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "sync:frontend": "git fetch frontend-upstream && git subtree pull --prefix=apps/web frontend-upstream main --squash",
    "sync:backend": "git fetch backend-upstream && git subtree pull --prefix=services/api backend-upstream main --squash",
    "push:frontend": "git subtree push --prefix=apps/web frontend-upstream main",
    "push:backend": "git subtree push --prefix=services/api backend-upstream main"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.0.0"
}
