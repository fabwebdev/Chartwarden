{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@chartwarden/types": ["./packages/types/src"],
      "@chartwarden/utils": ["./packages/utils/src"],
      "@chartwarden/config": ["./packages/config"]
    }
  },
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/utils" }
  ],
  "exclude": ["node_modules", "**/dist", "**/.next"]
}
