# ===========================================
# Chartwarden Frontend Environment Variables
# ===========================================

# API Base URL - Backend server URL (include /api if needed)
# For local development:
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# For production (examples):
# NEXT_PUBLIC_API_BASE_URL=https://api.chartwarden.com
# NEXT_PUBLIC_API_BASE_URL=https://ehr-fastify-server.onrender.com

# Application Configuration
NEXT_APP_VERSION=v1.0.0
NEXT_APP_API_URL=your_api_url_here
NEXT_APP_JWT_SECRET=your_jwt_secret_here
NEXT_APP_JWT_TIMEOUT=86400

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000/
NEXTAUTH_SECRET_KEY=your_nextauth_secret_key_here

# Google Maps API
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
